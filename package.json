{
  "name": "@samouraiwallet/auth47",
  "version": "0.3.0",
  "description": "A JS implementation of the Auth47 protocol",
  "keywords": [
    "bitcoin",
    "bip47",
    "bip-47",
    "auth47",
    "auth-47",
    "paynym"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "mocha",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .ts src/ test/",
    "build:clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.build.json",
    "build": "npm run build:clean && npm run build:esm",
    "prepack": "npm run lint && npm run typescript && npm run test",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@code.samourai.io:dojo/auth47-js.git"
  },
  "author": "Katana Cryptographic Ltd.",
  "license": "LGPL-3.0",
  "homepage": "https://code.samourai.io/dojo/auth47-js",
  "dependencies": {
    "@samouraiwallet/bip47": "0.7.0",
    "bip32": "3.1.0",
    "bitcoinjs-message": "2.2.0",
    "tiny-secp256k1": "2.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.11.64",
    "@types/tiny-secp256k1": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "mocha": "^10.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
