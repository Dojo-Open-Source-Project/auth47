{
  "name": "@samouraiwallet/auth47",
  "version": "0.5.1",
  "description": "A JS implementation of the Auth47 protocol",
  "keywords": [
    "bitcoin",
    "bip47",
    "bip-47",
    "auth47",
    "auth-47",
    "paynym"
  ],
  "type": "module",
  "engines": {
    "node": ">=14.x.x"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .ts src/ test/",
    "build:clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.build.json",
    "build": "npm run build:clean && npm run build:esm",
    "prepack": "npm run lint && npm run typescript && npm run test",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://code.samourai.io/dojo/auth47-js.git"
  },
  "bugs": {
    "url": "https://code.samourai.io/dojo/auth47-js/-/issues"
  },
  "author": "Katana Cryptographic Ltd.",
  "license": "LGPL-3.0",
  "homepage": "https://code.samourai.io/dojo/auth47-js",
  "dependencies": {
    "@samouraiwallet/bip47": "0.8.0",
    "bip32": "4.0.0",
    "bitcoinjs-message": "2.2.0",
    "fp-ts": "2.15.0",
    "io-ts": "2.2.20",
    "tiny-secp256k1": "2.2.1",
    "validator": "13.9.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.30",
    "@types/tiny-secp256k1": "^2.0.1",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitest/coverage-c8": "^0.31.0",
    "eslint": "^8.40.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unicorn": "^47.0.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  }
}
